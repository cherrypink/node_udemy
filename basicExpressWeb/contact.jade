extend layout

block content
	.container
	form(method='post', action='contact/send')
		h1 Contact
		div.form-group	
		label Name
		input.form-control(type='text', name='name',placeholer='Enter name')
		div.form-group	
		label Email
		input.form-control(type='email', name='email', placeholer='Enter Email')
		div.form-group	
		label Message
		textarea.form-control(name='message', placeholer='Enter message')
		button.btn.btn-default(type='submit') Submit